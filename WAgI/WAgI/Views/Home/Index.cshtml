@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script>
        var home = document.getElementsByClassName('activeHome');
        for (var i = 0; i < home.length; i++) {
            home[i].style.backgroundColor = "white";
            home[i].style.color = "#3d3d3d";
        }
    </script>
}

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/home.css" />
        <script src="~/js/homeSlidesDisplay.js"></script>
    </environment>
}

<div class="content">

    <div class="home-content">
            <div class="slides fade">
                <img id="image" src="~/images/home/image1.png">
                <div class="overlay">
                    <div class="text">Ceva descriere...</div>
                </div>
            </div>

            <div class="slides fade">
                <img id="image" src="~/images/home/image2.png">
                <div class="overlay">
                    <div class="text">Ceva descriere...</div>
                </div>
            </div>

            <div class="slides fade">
                <img id="image" src="~/images/home/image3.png">
                <div class="overlay">
                    <div class="text">Ceva si pe aici..</div>
                </div>
            </div>

            <div class="slides fade">
                <img id="image" src="~/images/home/image1.png">
                <div class="overlay">
                    <div class="text">Da...discutabil</div>
                </div>
            </div>
        </div>
        <a class="prev" onclick="plusSlides(-1)"><img id="arrow" src="~/images/home/left-arrow.png" /></a>
        <a class="next" onclick="plusSlides(1)"><img id="arrow" src="~/images/home/right-arrow.png" /></a>
   
</div>